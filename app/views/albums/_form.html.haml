= form_for @album do |f|
  -if @album.errors.any?
    #error_explanation
      %h2= "#{pluralize(@album.errors.count, "error")} prohibited this album from being saved:"
      %ul
        - @album.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :label
    = f.text_field :label
  .field
    = f.label :genre_id
    = f.text_field :genre_id
  .actions
    = f.submit 'Save'
